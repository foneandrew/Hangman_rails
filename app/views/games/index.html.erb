
<h1>Hangdude</h1>
<div class="floating_box">
  <%= form_for(Game.new) do |f| %>
    <%= f.submit "New Game" %>
  <% end %>

  <%= flash[:alert] %>

  <div class="scroll_pane">
    <ul>
      <% @games.each do |game| %>
        <li>
          <%= link_to game_status_description(game), game %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= content_tag :span, global_game_statistics(games_stats: @games_stats), class: :games_stats %>
