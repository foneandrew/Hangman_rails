
<h1>Hangdude</h1>
<div class="floating_box">
<%= flash[:alert] %>
  <%= form_for(Game.new) do |f| %>
    <%= f.submit "New Game" %>
  <% end %>
  <ul>
    <% @games.each do |game| %>
      <li>
        <%= link_to game_description(game), game %>
      </li>
    <% end %>
  </ul>
  <%= content_tag :span, global_game_statistics, class: :games_stats %>
</div>
